<div class="col-md-8">
<h3><%= @user.name %></h3>
<h4>今期見るアニメリスト</h4>
<table class="table">
	<thead>
		<th>タイトル</th>
		<th>日時</th>
	</thead>
	<tbody>
		<% @watch_lists.each do |w| %>
			<tr>
			<td><%= w.program.title %></td>
			<td><%= w.detail.started_at.strftime("%Y/%m/%d %H:%M") %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
<div class="col-md-4">
<ul class="nav pills nav-stacked">
	<% @seasons.each do |s| %>
		<li><%= link_to s.value, user_watch_lists_path(:user_name => @user.name, :season => s.value) %></li>
	<% end %>
	<% unless @seasons.any?{|season| season.current == true } %>
		<li><%= link_to '今期のウォッチリスト作成', new_user_watch_list_path(:user_name => @user.name) %></li>
	<% end %>
</ul>
</div>

