<% @programs = programs(@season) %>

<%= form_tag user_watch_lists_path do %>
<table class="table">
	<thead>
		<tr>
			<th>タイトル</th>
			<th>詳細</th>
		</tr>
	</thead>
	<tbody>
			<% @programs.each do |p, idx| %>
				<tr>
					<td>
						<input type="checkbox" class="wl-checkbox" id=<%= "p#{p.id}" %>>
						<label for=<%= "p#{p.id}" %>><%= p.title %></label>
					</td>
					<td class="wl-select">
						<% @options = build_options(p.details) %>
						<%= select_tag 'selection[]', options_for_select(@options), :style => "background: gray;", :disabled => true %>
					</td>
				</tr>
			<% end %>
	</tbody>
</table>
<%= submit_tag "決定", :class => "btn btn-default" %>
<% end %>
